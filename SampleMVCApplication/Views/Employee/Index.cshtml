<!-- CleanArchitectureDemo.Web/Views/Employee/Index.cshtml -->
@model List<SampleApp.Core.Entities.Employee>

<h1>Employee List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Position</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Position</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Employee" asp-action="Details" asp-route-id="1">View Employee Details (Example)</a>
